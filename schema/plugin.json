{
  "title": "Run and reload",
  "description": "Add buttons to the notebook that runs all cells and reloads files.",
  "type": "object",
  "properties": {
    "saveBeforeRun": {
      "type": "boolean",
      "title": "Save before running?",
      "description": "Should the notebook be saved before all cells are run?",
      "default": true
    },
    "saveAfterRun": {
      "type": "boolean",
      "title": "Save after running?",
      "description": "Should the notebook be saved after all cells are run?",
      "default": true
    }
  },
  "additionalProperties": false,
  "jupyter.lab.shortcuts": [
    {
      "command": "run-and-reload:run-all-cells-and-reload",
      "keys": ["Accel D"],
      "selector": ".jp-Notebook"
    },
    {
      "command": "run-and-reload:restart-run-all-cells-and-reload",
      "keys": ["Accel Shift D"],
      "selector": ".jp-Notebook"
    }
  ],
  "jupyter.lab.menus": {
    "main": [
      {
        "id": "jp-mainmenu-run",
        "items": [
          {
            "command": "run-and-reload:run-all-cells-and-reload",
            "rank": 300,
            "args": { "ignoreIcon": true }
          }
        ]
      },
      {
        "id": "jp-mainmenu-run",
        "items": [
          {
            "command": "run-and-reload:restart-run-all-cells-and-reload",
            "rank": 320,
            "args": { "ignoreIcon": true }
          }
        ]
      }
    ]
  },
  "jupyter.lab.toolbars": {
    "Notebook": [ 
      { "name": "Run all cells and reload", 
        "command": "run-and-reload:run-all-cells-and-reload",
        "rank": 30 },
      { "name": "Restart kernel run all cells and reload", 
        "command": "run-and-reload:restart-run-all-cells-and-reload",
        "rank": 35 }
    ]
  }
}